def check_imap_arguments(params):
    args = "-T"

    if 'hostname' in params:
        args += " -H %s" % quote_shell_string(params['hostname'])
    else:
        args += " -H $HOSTADDRESS$"

    args += " -u %s" % quote_shell_string(params['imapname'])

    if 'port' in params and params['port'] != 3493:
        args += " -p %d" % params['port']

    return args

def check_imap_description(params):
    return "UPS %s" % params['imapname']

active_check_info['imap'] = {
    "command_line": "$USER1$/check_imap $ARG1$",
    "argument_function": check_imap_arguments,
    "service_description": check_imap_description,
    "has_perfdata": True,
    }
